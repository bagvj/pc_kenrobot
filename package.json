{
  "private": true,
  "build": {
    "appId": "com.kenrobot.KenRobot",
    "compression": "maximum",
    "files": [
      "assets",
      "index.html",
      "main",
      "renderer",
      "node_modules",
      "!node_modules/serialport/build/Release/obj",
      "!node_modules/**/*.md",
      "!node_modules/**/test",
      "!node_modules/**/.*"
    ],
    "win": {
      "publisherName": "KenRobot"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "warningsAsErrors": false,
      "menuCategory": true,
      "artifactName": "${productName}.${ext}",
      "language": "2052"
    },
    "linux": {
      "icon": "icon",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 114,
          "y": 196
        },
        {
          "x": 416,
          "y": 196,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconSize": 128,
      "title": "KenRobot"
    }
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^15.1.1",
    "fs-extra": "^2.0.0",
    "getmac": "^1.2.1",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-clean": "^0.3.2",
    "gulp-clean-css": "^3.0.3",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-minify-html": "^1.0.6",
    "gulp-rename": "^1.2.2",
    "gulp-requirejs-optimize": "^1.2.0",
    "gulp-ruby-sass": "^2.1.1",
    "gulp-sftp": "^0.1.5",
    "gulp-uglify": "^2.0.1",
    "md5": "^2.2.1",
    "minimist": "^1.2.0",
    "q": "^1.4.1",
    "run-sequence": "^1.2.2"
  }
}
